<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.welington.locedu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_locedu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_locedu"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar"
        android:screenOrientation="portrait">
        <activity
            android:name=".View.Login"
            android:screenOrientation="portrait" />
        <activity android:name=".View.ListaSetor" />
        <activity
            android:name=".View.NovoSetor"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity android:name=".View.ListaLocal" />
        <activity
            android:name=".View.NovoLocal"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".View.NovoEvento"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity android:name=".View.ListaEvento" />
        <activity
            android:name=".View.PopUpInfoLocal"
            android:theme="@style/Theme.AppCompat.Dialog.MinWidth" />
        <activity
            android:name=".View.PopUpInfoEvento"
            android:theme="@style/Theme.AppCompat.Dialog.MinWidth" />
        <activity
            android:name=".View.PopUpFotoLocal"
            android:theme="@style/Theme.AppCompat.Dialog.MinWidth" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".View.Mapa"
            android:label="@string/title_activity_mapa" />
        <activity
            android:name=".View.Feedback"
            android:theme="@style/Theme.AppCompat.Dialog.MinWidth" />
        <activity
            android:name=".View.SplashScreen"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.PopUpListaMenu"
            android:theme="@style/Theme.AppCompat.Dialog.MinWidth" />
        <activity android:name=".View.Home"></activity>
    </application>

</manifest>